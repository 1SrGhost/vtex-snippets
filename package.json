{
  "name": "vtex-snippet-io",
  "displayName": "VTEX IO Snippets",
  "description": "Snippets to improve performance when developing in VTEX IO",
  "version": "0.0.33",
  "repository": {
    "type": "git",
    "url": "https://github.com/xGinDev/vtex-snippets"
  },
  "publisher": "xGinDev",
  "icon": "logo.jpg",
  "engines": {
    "vscode": "^1.82.0"
  },
  "scripts": {
    "lint-staged": "lint-staged",
    "postinstall": "husky install",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:patch": "standard-version --release-as patch",
    "release:major": "standard-version --release-as major"
  },
  "categories": [
    "Snippets",
    "Linters",
    "Other"
  ],
  "keywords": [
    "vtex",
    "vtex io",
    "store-framework"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "json",
        "path": "./snippets/blocks.code-snippets"
      },
      {
        "language": "jsonc",
        "path": "./snippets/blocks.code-snippets"
      },
      {
        "language": "json",
        "path": "./snippets/components.code-snippets"
      },
      {
        "language": "jsonc",
        "path": "./snippets/components.code-snippets"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "**/store/**/*.jsonc",
          "**/store/**/*.json"
        ],
        "url": "./schemas/components.schema.json"
      }
    ]
  },
  "lint-staged": {
    "src/**/*.{json, jsonc}": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint-staged"
    }
  },
  "devDependencies": {
    "standard-version": "^9.5.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.0.0"
  }
}
