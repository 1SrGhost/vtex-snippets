{
  "name": "vtex-snippets",
  "displayName": "Vtex-Snippets",
  "description": "Snippets to improve performance when developing in VTEX IO",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Snippets"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "json",
        "path": "./snippets/snippets.code-snippets"
      },
      {
        "language": "jsonc",
        "path": "./snippets/snippets.code-snippets"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "/snippets/snippets.code-snippets"
        ],
        "url": "./components/components.schema.json"
      }
    ]
  }
}