{
  "name": "vtex-snippet-io",
  "displayName": "VTEX IO Snippets",
  "description": "Snippets to improve performance when developing in VTEX IO",
  "version": "0.0.5",
  "repository": {
    "type": "git",
    "url": "https://github.com/xGinDev/vtex-snippets"
  },
  "publisher": "xGinDev",
  "icon": "logo.jpg",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Snippets",
    "Linters",
    "Other"
  ],
  "keywords": [
    "vtex",
    "vtex io",
    "store-framework"
  ],
  "contributes": {
    "snippets": [
      {
        "language": "json",
        "path": "./snippets/snippets.code-snippets"
      },
      {
        "language": "jsonc",
        "path": "./snippets/snippets.code-snippets"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "**/store/**/*.jsonc",
          "**/store/**/*.json"
        ],
        "url": "./schemas/flex-layout/flex-layout.col.json"
      }
    ]
  }
}
