{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "title": {
      "type": "string",
      "description": "The title of the block see in Site Editor"
    },
    "props": {
      "type": "object",
      "description": "The props of the block",
      "properties": {
        "buttonsContainerClass": {
          "type": "string",
          "description": "Button container classes",
          "default": "true"
        },
        "className": {
          "type": "string",
          "description": "Main container classes.",
          "default": null
        },
        "imageUrl": {
          "type": "string",
          "description": "Image url to share in social medias."
        },
        "social": {
          "type": "object",
          "properties": {
            "Facebook": {
              "type": "boolean",
              "default": true
            },
            "Twitter": {
              "type": "boolean",
              "default": true
            },
            "WhatsApp": {
              "type": "boolean",
              "default": true
            },
            "Pinterest": {
              "type": "boolean",
              "default": true
            }
          }
        }
      }
    }
  },
  "required": ["title"]
}
